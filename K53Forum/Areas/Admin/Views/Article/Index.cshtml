@model IEnumerable<K53Forum.Models.Article>

@{
    ViewBag.Title = "Danh sách bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script src="~/Areas/Admin/Scripts/articleController.js"></script>
}
<div class="col-md-12">
    <div class="page-header">
        <h3>Danh sách bài viết</h3>
    </div>
    <a href="/admin/article/create">Tạo bài viết</a>
    <table class="table table-responsive table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Category.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Member.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Count)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr id="article-@item.Id">
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Member.Username)
                    </td>
                    <td>
                        @item.Title.Substring(0, item.Title.Length >= 20 ? 20 : item.Title.Length)...
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Count)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "edit", new { id = item.Id }) |
                        @Html.ActionLink("Xem", "details", new { id = item.Id }) |
                        @Html.ActionLink("Xóa", "delete", new { id = item.Id }, new { @class = "delete-article" })
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
