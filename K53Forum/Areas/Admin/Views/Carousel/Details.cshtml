@model K53Forum.Models.Carousel

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="page-header">
        <h3>@Model.Title</h3>
    </div>
    <div class="row">
        <div class="col-md-6">

            <img src="@Model.Image" class="img-responsive" />
        </div>
        <div class="col-md-6 m-b-10">
            <div class="page-header">
                <h3>@Model.Title</h3>
            </div>
            <p>@Model.Content</p>

            <a href="/admin/carousel/edit/@Model.Id" class="btn btn-primary"><i class="fa fa-edit"></i>Chỉnh sửa</a>
            <a href="/admin/carousel/index" class="btn btn-default"><i class="fa fa-reply"></i>Trở về trang chủ</a>
        </div>
    </div>
</div>