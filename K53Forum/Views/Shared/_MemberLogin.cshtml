

@model K53Forum.Models.Member

@if (Model == null)
{
    <li><a href="#" data-toggle="modal" data-target="#register-modal"><i class="fa fa-user-plus" aria-hidden="true"></i> Đăng ký</a></li>
    <li><a href="#" data-toggle="modal" data-target="#login-modal"><i class="fa fa-sign-in" aria-hidden="true"></i> Đăng nhập</a></li>
}
else
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-user-circle" aria-hidden="true"></i> Xin chào, @Model.Fullname <span class="caret"></span></a>
        <ul class="dropdown-menu animated fadeIn" role="menu">
            <li><a href="/member/edit/@Model.Id"><i class="fa fa-edit" aria-hidden="true"></i> Sửa @Model.Fullname</a></li>
            <li><a href="/member/password/@Model.Id"><i class="fa fa-edit" aria-hidden="true"></i> Đổi mật khẩu</a></li>
            <li><a href="/message/index"><i class="fa fa-inbox" aria-hidden="true"></i> Tin nhắn <span class="badge pull-right">100</span></a></li>
            <li class="divider"></li>
            <li><a href="/home/logout"><i class="fa fa-sign-out" aria-hidden="true"></i> Đăng xuất</a></li>
        </ul>
    </li>
}